{
  "name": "@sokoban-eval-toolkit",
  "version": "0.0.1",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "env:setup": "find apps packages -mindepth 1 -maxdepth 1 -type d -exec cp .env {} \\;",
    "dev": "bun --env-file=.env --cwd apps/ui-sokoban dev",
    "eval": "bun --env-file=.env run apps/eval/src/index.ts",
    "build": "bun run --filter '*' build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "tsc": "tsc --build",
    "clean:tsc": "find . -name 'dist' -type d -not -path './node_modules/*' -prune -exec rm -rf {} + && find . -name 'tsconfig.tsbuildinfo' -not -path './node_modules/*' -delete",
    "clean:node_modules": "./scripts/clean-node-modules.sh",
    "reset": "bun run clean:tsc && bun run clean:node_modules && bun install",
    "check": "bun run lint && bun run format && bun run tsc"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.3.3",
    "bun-types": "^1.3.3",
    "concurrently": "^9.1.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@inquirer/core": "^11.1.0",
    "@inquirer/prompts": "^8.1.0",
    "p-limit": "^7.2.0"
  }
}
